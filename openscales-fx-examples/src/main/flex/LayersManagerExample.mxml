<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns="*"
		 xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:os="http://openscales.org"
		 width="100%"
		 height="100%"
		 creationComplete="initMap();" xmlns:fx1="org.openscales.fx.*" xmlns:layer="org.openscales.fx.control.layer.*" xmlns:control="org.openscales.fx.control.*">
	
	<os:Map id="fxMap"
			width="100%"
			height="100%"
			zoom="4"
			center="-74.011,40.710"
			proxy="http://openscales.org/proxy.php?url=">	
		
		<os:DragHandler />
		<os:WheelHandler />
		<os:Spinner id="spinner"
					x="{width / 2}"
					y="{height / 2}"/>	
		<os:MousePosition x="10"
						  y="{height-20}"
						  displayProjection="EPSG:4326"/>
		<os:ScaleLine x="{width-100-10}"
					  y="{height-80}" />
		
		<!-- Specific layers and handlers of this example -->
		
		<!-- OpenStreetMap EPSG:900913 -->
		<os:Mapnik name="Mapnik" />
		
		<os:CycleMap name="CycleMap" alpha="0.5" />

		<os:WFS name="Topp States (WFS)"
				url="http://openscales.org/geoserver/wfs"
				typename="topp:states"
				projection="EPSG:4326"
				version="1.0.0"
				style="{Style.getDefaultSurfaceStyle()}">
		</os:WFS>
		
	</os:Map>
	
	<control:TraceInfo id="traceInfo"
				  x="{width-200}"
				  y="0"
				  visible="{displayTrace}"/>
	<!-- Specific tools of this example -->
	
	<os:ControlPanel title="Layers Manager"
					 x="10"
					 y="10"
					 width="230">
		<layer:LayerManager map="{map}" />
	</os:ControlPanel>
	
	<fx:Script>
		<![CDATA[
			import org.openscales.core.layer.Layer;
			import org.openscales.core.layer.osm.Mapnik;
			import org.openscales.core.layer.osm.OSM;
			import org.openscales.core.style.Style;
			import org.openscales.core.Map;
			import org.openscales.core.Trace;
			
			[Bindable] private var map:Map = null;
			[Bindable] public var displayTrace:Boolean = false;	
			[Bindable] public var displayFirebugTrace:Boolean = true;
			
			private function initMap():void {
				Trace.useFireBugConsole = displayFirebugTrace;
				map=fxMap.map;
			}
		]]>
	</fx:Script>
	
</s:Group>
