<?xml version="1.0" encoding="utf-8"?>
<!--- <p>Choose a base layer using the combo-box.</p>
<p>Change the order of the overlays using the up/down buttons or draging an overlay.
Set the opacity of each layer (base layer or overlay) using its slider.</p> -->
<s:Group xmlns="http://openscales.org" xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">
	
	<Map id="fxMap" width="100%" height="100%" resolution="0.17578125"
			center="-74.011,40.710" projection="EPSG:900913">	
		
		<DragHandler />
		<WheelHandler />
		<Spinner id="spinner" x="{width / 2}" y="{height / 2}"/>	
		<MousePosition id="mousePosition" x="10" y="{height-50}" availableProjSrsList="EPSG:4326,EPSG:900913" displayProjSrsCode="EPSG:4326"/>
		<ScaleLine x="{width-100-10}" y="{height-80}" />
		
		<Mapnik id="mapnik" name="Mapnik" />
		
		<CycleMap name="CycleMap" alpha="0.5" proxy="http://openscales.org/proxy.php?url="/>

		<WFS name="Topp States (WFS)" url="http://openscales.org/geoserver/wfs" typename="topp:states"
				projection="EPSG:4326" version="1.0.0" style="{Style.getDefaultSurfaceStyle()}" />
		
		<TraceInfo id="traceInfo" x="{width-200}" y="0" />
		
		<LayerManager x="10" y="10" width="215" />
		
	</Map>
	
	
	<s:Button name="button" label="Change displayInLayerManager Mapnik value" 
			  bottom="100" right="50"
			  click="changeDisplayInLayerManager(event)" />
	
	<fx:Script>
		<![CDATA[
			public function changeDisplayInLayerManager(event:Event):void
			{
				mapnik.displayInLayerManager = !mapnik.displayInLayerManager;
			}
		]]>
	</fx:Script>
	
</s:Group>
