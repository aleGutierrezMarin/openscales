<?xml version="1.0" encoding="utf-8"?>
<!--- Image layer allow to display a layer with the single geolocalized picture. -->
<s:Group xmlns="http://openscales.org" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%">
	
	<Map id="fxMap" width="100%" height="100%" zoom="2" center="4.833,45.767">
		
		<ImageLayer name="City Lights" url="http://openscales.org/4_m_citylights_lg.gif"
					   bounds="-180,-88.759,180,88.759" minZoomLevel="1" maxZoomLevel="5"/>
		
		<DragHandler/>
		<WheelHandler/>
		
		<MousePosition id="mousePosition" x="10" y="{height-50}" availableProjSrsList="EPSG:4326,EPSG:900913" displayProjSrsCode="EPSG:4326" />
		
		<TraceInfo x="{width-200}" y="0" />
		
		<PanZoom id="panZoom" x="10" y="10" />
		
	</Map>
		
</s:Group>
