<?xml version="1.0" encoding="utf-8"?>
<!--- A single WFS layer intended to test vector feature as base layer. -->
<s:Group xmlns="http://openscales.org"  xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="100%">

	<Map id="fxMap" width="100%" height="100%" resolution="0.087890625" center="-74.011,40.710">

		<DragHandler/>
		<WheelHandler/>

		<Spinner x="{width / 2}" y="{height / 2}"/>
		<MousePosition id="mousePosition" x="10" y="{height-50}" availableProjSrsList="EPSG:4326,EPSG:900913" displayProjection="EPSG:4326"/>

		<WFS name="Topp States (WFS)" url="http://openscales.org/geoserver/wfs"
				typename="topp:states" projection="EPSG:4326" version="1.0.0"
				style="{Style.getDefaultSurfaceStyle()}" />
		
	</Map>
	
</s:Group>
