<?xml version="1.0" encoding="utf-8"?>
<!--- The example use the BorderPanHandler that pan the map based on distance between the cursor and the center of the map. -->
<s:Group xmlns="http://openscales.org" xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:fx="http://ns.adobe.com/mxml/2009" width="100%" height="100%">

	<Map id="fxMap" width="100%" height="100%" center="4.833,45.767,EPSG:4326" maxExtent="-180,-90,180,90,EPSG:4326">
		<WMSC name="Nasa" url="http://openscales.org/geoserver/gwc/service/wms"
				 layers="bluemarble" format="image/jpeg" maxExtent="-180,-90,180,90" version="1.1.1"/>

		

		<Spinner x="{width / 2}" y="{height / 2}"/>
		<MousePosition id="mousePosition" x="10" y="{height-50}" availableProjSrsList="EPSG:4326,EPSG:900913" displayProjection="EPSG:4326"/>
		<!--<BorderPanHandler/>-->
		<ClickHandler/>
		<WheelHandler/>
		
		<PanZoom id="panZoom" x="10" y="10" />
		
		<TraceInfo x="{width-200}" y="0" />
		
	</Map>
	
</s:Group>
