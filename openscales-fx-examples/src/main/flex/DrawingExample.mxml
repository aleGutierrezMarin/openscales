<?xml version="1.0" encoding="utf-8"?>
<!--- Drag the map or draw some points, polylines or polygons using the buttons of the first line.
Use click and CTRL+click to select features.
Use the buttons of the second line to remove the last drawn vertex, to delete the selected features, to delete all the drawn features or to merge the selected features. -->
<s:Group xmlns="http://openscales.org" 
		 xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import org.openscales.core.basetypes.Resolution;
			import org.openscales.core.layer.VectorLayer;
			
			[Bindable]
			private var res:Resolution = new Resolution(0.010625, "EPSG:4326");
		]]>
	</fx:Script>
	
	<Map id="fxMap" width="100%" height="100%" resolution="{res}" center="4.833,45.767">
		
		<WMS id="wmsLayer" name="myLayer" url="http://openscales.org/geoserver/wms"
			 layers="bluemarble" format="image/jpeg" version="1.1.0" styles="" alpha="0.75"/>
		
		<VectorLayer id="features"/>
		<DragHandler />
		<WheelHandler />
		<Spinner id="spinner" x="{width / 2}" y="{height / 2}"/>
		<MousePosition id="mousePosition" x="10" y="{height-50}" availableProjSrsList="EPSG:4326,EPSG:900913" displayProjSrsCode="EPSG:4326"/>
		<ScaleLine x="{width-100-10}" y="{height-80}"/>
		
		<LayerManager top="5" right="5"/>
		
		<s:Panel title="Drawing Tools" x="10" y="10" height="70" >
			<s:layout>
				<s:HorizontalLayout paddingTop="1" paddingRight="1" paddingBottom="1" paddingLeft="1"
									horizontalAlign="center" verticalAlign="middle"/>
			</s:layout>
			<DrawLabel id="drawLabel" target="{features.nativeLayer as VectorLayer}" />
			<DrawPoint id="drawPoint" target="{features.nativeLayer as VectorLayer}" />
			<DrawPath id="drawPath" target="{features.nativeLayer as VectorLayer}"  />
			<DrawPolygon id="drawPolygon" target="{features.nativeLayer as VectorLayer}" />
			<SelectFeatures id="selectFeatures" target="{features.nativeLayer as VectorLayer}" />
			<EditFeatures id="editFeatures" target="{features.nativeLayer as VectorLayer}" />
			<MoveFeatures id="moveFeatures" target="{features.nativeLayer as VectorLayer}" />
			<ImportFeature id="importFeature" map="{fxMap.map}"/>
			<ManageAttributes map="{fxMap.map}" target="{features.nativeLayer as VectorLayer}" />
			<ExportFeature id="exportFeature" target="{features.nativeLayer as VectorLayer}" />
		</s:Panel>
		
	</Map>
	
</s:Group>
