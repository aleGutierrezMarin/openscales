<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	<s:BorderContainer width="100%" top="{this.itemIndex==0?0:5}">
		<s:Group top="5" bottom="5" left="5" right="5">
			<s:layout>
				<s:VerticalLayout gap="5" />
			</s:layout>
			<s:Group width="100%" id="titleGroup">
				<s:Label text="{title}"
						 includeInLayout="{displayTitle}"
						 visible="{displayTitle}"
						 fontWeight="bold"
						 fontSize="14"/>
				<s:Rect width="100%" height="1" bottom="1">
					<s:fill>
						<s:SolidColor color="#000000" />
					</s:fill>
				</s:Rect>
			</s:Group>
			<s:Group id="content" creationComplete="init()" width="100%" />
		</s:Group>
	</s:BorderContainer>
	
	
	<fx:Script>
		<![CDATA[
			import org.openscales.sld.events.SLDEvent;
			
			import org.openscales.sld.handler.AbstractRuleHandler;
			
			import mx.core.IVisualElement;
			
			import org.openscales.core.style.Rule;
			
			[Bindable]
			private var title:String;
			
			[Bindable]
			private var displayTitle:Boolean=true;
			
			override public function set data(value:Object):void {
				if(this.data && this.data is AbstractRuleHandler) {
					content.removeAllElements();
				}
				super.data = value;
				if(value is AbstractRuleHandler) {
					displayTitle = true;
					title = (value as AbstractRuleHandler).name;
					content.addElement(value as AbstractRuleHandler);
				} else {
					displayTitle = false;
				}
			}
			
			private function init():void {
				this.data = this.data;
			}
		]]>
	</fx:Script>
</s:ItemRenderer>
