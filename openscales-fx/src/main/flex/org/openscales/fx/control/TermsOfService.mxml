<?xml version="1.0" encoding="utf-8"?>
<!--- Terms Of Service control to display a label and a link to Terms of service explanations page  -->
<Control xmlns="http://openscales.org" 
		 xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100" height="50" initialize="configure()">
	
	<fx:Script>
		<![CDATA[
			
			[Bindable] private var _label:String = "Terms of Service";
			[Bindable] private var _url:String = "";
			
			public function  configure():void
			{ 
				TermsOfServiceText.htmlText = "<a href='"+this._url+"' target='_blank'>"+this._label+"</a>";
			}
			
			public function set label(value:String):void{
				this._label = value;
			}
			
			public function set url(value:String):void{
				this._url = value;
			}
			
		]]>
	</fx:Script>
	
	<mx:Text id="TermsOfServiceText"
			 width="100%"
			 height="100%" />
	
</Control>