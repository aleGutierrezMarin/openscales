		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="400" height="100" initialize="configure()">

	<fx:Script>
		<![CDATA[
			
			[Bindable] private var _copyright:String = "Copyright";
			
			
			public function  configure():void
			{ 
				copyrightLabel.text= "Â© "+this._copyright;
			}
			
			/**
			 * Provider label for the copyright.
			 * @return The string label of the copyright
			 */
			public function get copyright():String
			{
				return this._copyright;
			}
			
			public function set copyright(value:String):void
			{
				this._copyright = value;
			}
			
		]]>
	</fx:Script>
	
	<mx:Label id="copyrightLabel"
					width="100%"
					height="100%" />
	
</Control>