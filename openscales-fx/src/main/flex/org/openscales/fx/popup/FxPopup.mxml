					//Hide Save and Cancel buttons
					this.iconButtonCancel.visible = false;
					this.iconButtonSave.visible = false;
					//Display Edit button
					this.iconButtonEdit.visible = true;
				}
				else{
					//A mandatory field hasn't been filled, save can't be done
