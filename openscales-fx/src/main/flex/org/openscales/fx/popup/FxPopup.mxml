				//Hide Edit button
				hideIconButtonEdit();
				
			}
			
			private function setEditModeQuadrant(_quadrant:String):void{
				var _panel:Panel = this.getPanel(_quadrant);
				var _hBox:HBox;
				var _nbFields:int = 0;
				var _nbFieldsMulti:int = 0;
				var _fieldName:String;
				var _fieldValue:String;
				
				//_panel.title = this._title;
				//The first thing to do it to empty the panel
				_panel.removeAllElements();
				var _array:Array = this._content.split("<br />");
				var _vBox:VBox = new VBox();
				//Treat PopUp title (i==0)
				_fieldName = "Nom:";
				_fieldValue = _array[0];
				_fieldValue =_fieldValue.replace("<b><font size='15'>", "");
				_fieldValue = _fieldValue.replace("</font></b>","");
				_hBox = this.getEditionItem(_fieldName, _fieldValue, false, NaN, true);
				_nbFields ++;
				_vBox.addElement(_hBox);
				for (var i:int=1; i<_array.length; i++){
					var _subArray:Array = (_array[i] as String).split(":");
					if (_subArray.length == 2){
						_fieldName = _subArray[0];
						_fieldValue = _subArray[1];
						
						_fieldName = _fieldName.replace("<b>","");
						_fieldName = _fieldName.replace("</b>","");
						
						if (_fieldName.search("Adresse") >=0 || _fieldName.search("Nom") >=0){
							_hBox = this.getEditionItem(_fieldName, _fieldValue, true, 4, true);
							_nbFieldsMulti ++;
						}
						else{
							_hBox = this.getEditionItem(_fieldName, _fieldValue);
							_nbFields ++;
						}
						_vBox.addElement(_hBox);
						
					}
				}
				//Add a "Mandatory fields" message
				var _text:Text = new Text();
				_text.htmlText = "<font color='#FF0000'><b>(* Champs obligatoires)</b></font>";
				_vBox.addElement(_text);
				
				_vBox.verticalScrollPolicy = "auto";
				_vBox.height = (_panel.height-10);
				_vBox.width = _panel.width;
				_vBox.top=13;
				_vBox.bottom=15;
				_panel.addElement(_vBox);
				
			}
			
			private function getEditionItem(_label:String, _value:String=null, _multiLine:Boolean=false, _nbLines:int=1, _mandatory:Boolean=false):HBox{
				var _hBox:HBox = new HBox();
				var textField:SkinnableTextBase;
				var _text:Text = new Text();
				
				//Multiline treatment:
				if (_multiLine){
					//Use a TextArea object	
					textField = new TextArea();	
					textField.height= 50;
				}
				else{
					//Use a TextInput object
					textField = new TextInput();
				}
				
				_text.htmlText = "<b>" + _label + "</b>";
				//Mandatory field treatment:
				if (_mandatory){
					_text.htmlText += "<FONT color='#FF0000'>*</FONT>";	
				}
				
				textField.percentWidth = 100;
				_hBox.percentWidth = 95;
				if (_value)
					textField.text = _value;
				
				_hBox.addChild(_text);
				_hBox.addChild(textField);
				
				return _hBox;
			}
			
